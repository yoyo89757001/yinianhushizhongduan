<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="QMUI.Compat.NoActionBar">
        <item name="colorPrimary">#FF5CBAEA</item>
        <item name="colorPrimaryDark">#FF5CBAEA</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QMUI.Dialog" parent="QMUI.BaseDialog">
        <item name="android:backgroundDimAmount">?attr/qmui_dialog_background_dim_amount</item>
        <item name="android:windowBackground">@color/qmui_config_color_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item><!-- 在中间弹框、背后有遮罩的效果 -->
    </style>

    <style name="AppThemeFull" parent="QMUI.Compat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="crowd_item_progressBar">

                <item name="android:indeterminateOnly">false</item>

                <item name="android:progressDrawable">@drawable/ddfback</item>

                <item name="android:minHeight">10dp</item>

                <item name="android:maxHeight">10dp</item>

    </style>

      <!-- Search Text Style. -->
    <style name="SearchTextStyle">
        <!-- Custom values write to here for SearchEditText. -->
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:enabled">true</item>
        <item name="android:hint">搜索</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLength">10</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColorHint">#80999999</item>
        <item name="android:textColor">#474747</item>
    </style>

    <style name="dialogs2" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MessageTheme">
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--设置无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialogs" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>

        <!--模糊-->
    </style>
    <style name="LoadingTextView">
        <item name="textStyle">vertical</item>
        <item name="textColor">@color/gray_text</item>
        <item name="textSize">12sp</item>
        <item name="textPadding">5dp</item>
        <item name="android:text">@string/loading_text_default</item>
    </style>
    <style name="LoadingTextView_Percent" parent="LoadingTextView">
        <item name="textPadding">10dp</item>
        <item name="textSize">15sp</item>
        <item name="android:text"/>
    </style>

    <style name="popwindowUpAnim">
        <item name="android:windowEnterAnimation">@anim/fade_up</item>
        <item name="android:windowExitAnimation">@anim/fade_down</item>
    </style>
    <style name="TitleBar_Dark">
        <item name="textColor">@android:color/white</item>
        <item name="background">@color/dark_bg_70p</item>
        <item name="backButton">@drawable/message_back_selector</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.lumi.AddSonDeviceActivity">
    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FF59B683"
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <View
            android:id="@+id/fanhui"
            android:layout_width="54dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@drawable/fanhui2"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_width="22dp"
            android:layout_height="22dp"/>
        <TextView
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:text="添加子设备"
            android:id="@+id/myTitle"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--        <ImageView-->
        <!--            android:src="@drawable/san2"-->
        <!--            android:layout_width="40dp"-->
        <!--            android:padding="10dp"-->
        <!--            android:id="@+id/shezhi"-->
        <!--            android:layout_marginRight="2dp"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:layout_height="match_parent"/>-->

    </RelativeLayout>


    <ImageView
        android:id="@+id/im11"
        app:layout_constraintTop_toBottomOf="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/im11"
        android:textSize="16sp"
        android:gravity="center"
        android:id="@+id/fggg"
        android:layout_marginTop="22dp"
        android:textColor="@color/common_text"
        android:text="请长按开关键5秒以上，直到蓝灯亮起后松开"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.qmuiteam.qmui.widget.QMUIProgressBar
        android:id="@+id/circleProgressBar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:textColor="#FF59B683"
        android:textSize="22sp"
        app:qmui_background_color="?attr/qmui_config_color_gray_8"
        app:qmui_progress_color="#FF59B683"
        app:qmui_stroke_width="4dp"
        app:qmui_type="type_circle"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fggg"/>




</androidx.constraintlayout.widget.ConstraintLayout>
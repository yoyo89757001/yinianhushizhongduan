<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:maxHeight="92dp"
    android:background="@drawable/yinying1"
    android:layout_height="wrap_content">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/shanchu"
        android:padding="14dp"
        android:id="@+id/shanchu"
        android:layout_width="44dp"
        android:layout_height="44dp"/>
    
    <com.qmuiteam.qmui.widget.QMUIFontFitTextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/shanchu"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12sp"
        app:layout_constraintTop_toTopOf="@+id/shanchu"
        app:layout_constraintBottom_toBottomOf="@+id/shanchu"
        app:qmui_minTextSize="10sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#FF333333"
        android:text="标题"
        android:id="@+id/title"
        app:qmui_maxTextSize="14sp"
        android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/content_tv"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:textColor="#FF646464"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>
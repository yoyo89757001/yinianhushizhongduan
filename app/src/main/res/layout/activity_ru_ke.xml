<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.fragments1.dairuke.RuKeActivity">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FF59B683"
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <View
            android:id="@+id/fanhui"
            android:layout_width="54dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@drawable/fanhui2"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_width="22dp"
            android:layout_height="22dp"/>
        <TextView
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:text="入科"
            android:id="@+id/myTitle"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/topbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/klkl"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.qmuiteam.qmui.widget.QMUIFontFitTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            app:qmui_minTextSize="8sp"
            app:qmui_maxTextSize="14sp"
            android:text="ID:8979893231"
            android:id="@+id/idid"
            android:textColor="#646464"
            android:layout_height="wrap_content"/>

        <com.qmuiteam.qmui.widget.QMUIFontFitTextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            app:qmui_minTextSize="8sp"
            app:qmui_maxTextSize="14sp"
            android:text="姓名:马冬梅"
            android:id="@+id/name"
            android:textColor="#646464"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/jjhh"
        app:layout_constraintTop_toBottomOf="@+id/klkl"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.qmuiteam.qmui.widget.QMUIFontFitTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            app:qmui_minTextSize="8sp"
            app:qmui_maxTextSize="14sp"
            android:text="性别:男"
            android:id="@+id/sex"
            android:textColor="#646464"
            android:layout_height="wrap_content"/>

        <com.qmuiteam.qmui.widget.QMUIFontFitTextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            app:qmui_minTextSize="8sp"
            app:qmui_maxTextSize="14sp"
            android:text="年龄:18岁"
            android:id="@+id/age"
            android:textColor="#646464"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.qmuiteam.qmui.widget.QMUIFontFitTextView
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jjhh"
        app:qmui_minTextSize="8sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        app:qmui_maxTextSize="14sp"
        android:text="身份证:65656567786787879798"
        android:id="@+id/shenfenzheng"
        android:textColor="#646464"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="20dp"
        android:id="@+id/juir"
        app:layout_constraintTop_toBottomOf="@+id/shenfenzheng"
        android:background="#F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/juir"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="楼栋"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:id="@+id/kjjf"
            android:textColor="#303030"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <com.qmuiteam.qmui.widget.QMUIFloatLayout
                android:layout_marginTop="16dp"
                android:id="@+id/qmfl1"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/kjjf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/v111"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/qmfl1"
            android:background="#FFF5F5F5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
  <!--//////////////////////////////////////////////////////////////////////////-->
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/v111"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="楼层"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:id="@+id/kjjfk"
                android:textColor="#303030"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.qmuiteam.qmui.widget.QMUIFloatLayout
                android:layout_marginTop="16dp"
                android:id="@+id/qmfl2"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/kjjfk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/v222"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/qmfl2"
                android:background="#FFF5F5F5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
<!--//////////////////////////////////////////////////////////////////////////-->
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/v222"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="房间"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:id="@+id/kjjfkl"
                android:textColor="#303030"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.qmuiteam.qmui.widget.QMUIFloatLayout
                android:layout_marginTop="16dp"
                android:id="@+id/qmfl3"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/kjjfkl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/v333"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/qmfl3"
                android:background="#FFF5F5F5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <!--//////////////////////////////////////////////////////////////////////////-->
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/v333"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="床号"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:id="@+id/kjjfklu"
                android:textColor="#303030"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.qmuiteam.qmui.widget.QMUIFloatLayout
                android:layout_marginTop="16dp"
                android:id="@+id/qmfl4"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/kjjfklu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/v444"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/qmfl4"
                android:background="#FFF5F5F5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <com.qmuiteam.qmui.layout.QMUIButton
                app:layout_constraintTop_toBottomOf="@+id/v444"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="28dp"
                android:id="@+id/xiayibu"
                android:layout_marginBottom="40dp"
                android:layout_width="200dp"
                android:textSize="14sp"
                android:textColor="#FFFFFFFF"
                android:text="下一步"
                android:background="#FF59B683"
                android:layout_height="50dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
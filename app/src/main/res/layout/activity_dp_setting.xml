<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lumi.wangguan.WGSettingActivity">
    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FF59B683"
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <View
            android:id="@+id/fanhui"
            android:layout_width="54dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@drawable/fanhui2"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_width="22dp"
            android:layout_height="22dp"/>
        <TextView
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:text="智能网关"
            android:id="@+id/myTitle"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/san2"
            android:layout_width="40dp"
            android:padding="10dp"
            android:id="@+id/shezhi"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/scrollView"
        android:background="#F8F9FB"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/topbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_alignParentBottom="true"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:textColor="#8A8989"
                android:id="@+id/infiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.skydoves.colorpickerview.ColorPickerView
                android:layout_alignBottom="@+id/infiss"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dp"
                android:id="@+id/colorPickerView"
                android:layout_width="200dp"
                android:layout_height="200dp" />



        </RelativeLayout>



            <androidx.appcompat.widget.AppCompatSeekBar
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:id="@+id/seekbar"
                android:layout_marginRight="60dp"
                android:layout_weight="0.7"
                app:layout_constraintTop_toBottomOf="@+id/infiss"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

           <RelativeLayout
               android:orientation="vertical"
               android:layout_marginTop="10dp"
               android:id="@+id/kkk"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:layout_weight="0.9"
               app:layout_constraintTop_toBottomOf="@+id/seekbar"
               android:background="@drawable/zidonghuoqubai6"
               android:layout_width="match_parent"
               android:layout_height="0dp">
                <TextView
                    android:text="开关"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

               <androidx.appcompat.widget.SwitchCompat
                   android:layout_width="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="16dp"
                   android:id="@+id/switcher"
                   android:layout_centerVertical="true"
                   android:layout_height="wrap_content"/>

           </RelativeLayout>





            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.8"
                android:orientation="horizontal"
                 android:background="@drawable/zidonghuoqubai6"
                app:layout_constraintTop_toBottomOf="@+id/kkk"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:id="@+id/l1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp">

                    <com.qmuiteam.qmui.layout.QMUIButton
                        android:layout_width="44dp"
                        android:id="@+id/bt1"
                        android:background="#E38F45"
                        android:layout_height="44dp"/>

                    <TextView
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:text="放松"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/l2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp">

                    <com.qmuiteam.qmui.layout.QMUIButton
                        android:layout_width="44dp"
                        android:id="@+id/bt2"
                        android:background="#E2b38d"
                        android:layout_height="44dp"/>

                    <TextView
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:text="休息"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/l3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp">

                    <com.qmuiteam.qmui.layout.QMUIButton
                        android:layout_width="44dp"
                        android:id="@+id/bt3"
                        android:background="#E2c8b8"
                        android:layout_height="44dp"/>

                    <TextView
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:text="电影"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/l4"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp">

                    <com.qmuiteam.qmui.layout.QMUIButton
                        android:layout_width="44dp"
                        android:id="@+id/bt4"
                        android:background="#E2d7d6"
                        android:layout_height="44dp"/>

                    <TextView
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:text="起床"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
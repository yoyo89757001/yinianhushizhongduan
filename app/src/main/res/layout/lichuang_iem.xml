<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/yinying1"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/lfff"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="离床警告"
                android:textSize="13sp"
                android:textStyle="bold"
                android:id="@+id/dddd"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/lfff"
                android:text="离床警告"
                android:id="@+id/info"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



        <TextView
            app:layout_constraintLeft_toLeftOf="@+id/dddd"
            app:layout_constraintTop_toBottomOf="@+id/dddd"
            android:text="离床警告"
            android:textSize="13sp"
            android:id="@+id/time"
            android:layout_marginTop="2dp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <ImageView
        app:layout_constraintLeft_toRightOf="@+id/lfff"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/shanchu"
        android:src="@drawable/shanchuc"
        android:layout_width="48dp"
        android:layout_height="48dp"/>







</androidx.constraintlayout.widget.ConstraintLayout>
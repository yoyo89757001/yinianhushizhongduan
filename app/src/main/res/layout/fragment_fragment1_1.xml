<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments1.fuwu.Fragment1_1">


    <LinearLayout
        android:baselineAligned="false"
        android:id="@+id/ggg3"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:id="@+id/tl1"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="#FF59B683"
                android:textSize="15sp"
                android:text="待处理"
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <View
                android:background="#FF59B683"
                android:layout_width="0dp"
                android:id="@+id/v1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/t1"
                app:layout_constraintRight_toRightOf="@+id/t1"
                android:layout_height="2dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:id="@+id/tl2"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="#FFA7A7A7"
                android:textSize="15sp"
                android:text="已完成"
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <View
                android:background="#FF59B683"
                android:layout_width="0dp"
                android:id="@+id/v2"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/t2"
                app:layout_constraintRight_toRightOf="@+id/t2"
                android:layout_height="2dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <com.qmuiteam.qmui.layout.QMUIButton
                android:layout_width="80dp"
                android:textColor="#FF59B683"
                android:textSize="12sp"
                android:id="@+id/addserver"
                android:background="@null"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="添加服务"
                android:layout_height="26dp"/>


        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/fgfg"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ggg3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_weight="1"
            android:background="#F6F5F5"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

    </LinearLayout>




    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpage_fuwu"
        app:layout_constraintTop_toBottomOf="@+id/fgfg"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
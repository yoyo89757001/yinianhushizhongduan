<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="42dp"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:layout_centerHorizontal="true"
        android:id="@+id/aadd"
        android:text="@string/login_title_pass"
        android:textColor="#333333"
        android:textSize="26sp" />

    <LinearLayout
        android:id="@+id/ee"
        android:layout_below="@+id/aadd"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="49dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_user" />

        <EditText
            android:id="@+id/et_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="@string/login_hint_phone"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="#333333"
            android:textColorHint="#d7d7d7"
            android:textSize="15sp" />

        <ImageView
            android:padding="10dp"
            android:id="@+id/xiala"
            android:src="@drawable/xia_fuwu"
            android:layout_width="44dp"
            android:layout_height="44dp"/>
    </LinearLayout>

    <View
        android:layout_below="@+id/ee"
        android:id="@+id/eeee"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="#f2f2f2" />

    <LinearLayout
        android:layout_below="@+id/eeee"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="49dp"
        android:id="@+id/e2"
        android:layout_marginTop="20dp"
        android:layout_marginRight="49dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_pass" />

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="@string/login_hint_pass"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textColor="#333333"
            android:textColorHint="#d7d7d7"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/cb_eye"
            android:padding="8dp"
            android:src="@drawable/checkbox_eye"
            android:layout_width="44dp"
            android:layout_height="44dp"/>

    </LinearLayout>


    <View
        android:layout_below="@+id/e2"
        android:id="@+id/e3"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="#f2f2f2" />




    <Button
        android:layout_below="@+id/e3"
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/jiaohu3"
        android:text="@string/login_btn_login"
        android:textColor="#ffffff"
        android:textSize="17sp" />



    <ImageView
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_login_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>



    <ImageView
        android:layout_alignParentRight="true"
        android:src="@drawable/shezhi_bg"
        android:id="@+id/shezhi"
        android:visibility="gone"
        android:layout_width="50dp"
        android:padding="10dp"
        android:layout_height="50dp"/>



</RelativeLayout>
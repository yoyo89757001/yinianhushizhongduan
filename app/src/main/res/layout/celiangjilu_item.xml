<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:background="@drawable/zidonghuoqu122"
    android:layout_width="match_parent"
    android:layout_height="194dp">

    <TextView
        android:layout_marginTop="17dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#FF4C4C4C"
        android:textSize="14sp"
        android:text="马冬梅"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:textColor="#FFB6B6B6"
        android:textSize="14sp"
        android:text="2020-12-12 12:12"
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/t1"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/name"
        android:textColor="#FFB6B6B6"
        android:textSize="14sp"
        android:text="血压:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/t2"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/t1"
        android:textColor="#FFB6B6B6"
        android:textSize="14sp"
        android:text="心率:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/xueya"
        app:layout_constraintTop_toTopOf="@+id/t1"
        app:layout_constraintBottom_toBottomOf="@+id/t1"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toRightOf="@+id/t1"
        android:textColor="#FF4C4C4C"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/xinlv"
        app:layout_constraintTop_toTopOf="@+id/t2"
        app:layout_constraintBottom_toBottomOf="@+id/t2"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toRightOf="@+id/t2"
        android:textColor="#FF4C4C4C"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/mn"
        app:layout_constraintTop_toBottomOf="@+id/t2"
        android:background="#FFD7D7D7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    
    
    <com.qmuiteam.qmui.layout.QMUIButton
        android:background="#FF59B683"
        android:textSize="12sp"
        android:textColor="#FFFFFFFF"
        android:text="上传"
        android:id="@+id/shangchuan"
        app:layout_constraintTop_toBottomOf="@+id/mn"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginRight="16dp"
        android:layout_width="56dp"
        android:layout_height="30dp"/>

    <com.qmuiteam.qmui.layout.QMUIButton
        android:background="@null"
        android:textSize="12sp"
        android:textColor="#FF59B683"
        android:text="取消"
        android:id="@+id/quxiao"
       app:layout_constraintTop_toTopOf="@+id/shangchuan"
        app:layout_constraintBottom_toBottomOf="@+id/shangchuan"
        app:layout_constraintRight_toLeftOf="@+id/shangchuan"
        android:layout_marginRight="14dp"
        android:layout_width="56dp"
        android:layout_height="30dp"/>

    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@+id/quxiao"
        app:layout_constraintBottom_toBottomOf="@+id/quxiao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/quxiao"
        android:textColor="#FF4C4C4C"
        android:textSize="14sp"
        android:text="护士"
        android:id="@+id/name2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
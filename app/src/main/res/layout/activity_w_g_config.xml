<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lumi.wangguan.WGConfigActivity">


    <com.qmuiteam.qmui.widget.tab.QMUITabSegment
        android:id="@+id/tabs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_gravity="bottom"
        android:textSize="12sp"
        app:qmui_tab_has_indicator="true"
        app:qmui_tab_mode="fixed"
        app:qmui_tab_selected_text_size="16sp"
        app:qmui_tab_normal_text_size="14sp"
        app:qmui_topDividerHeight="1px"
        app:qmui_topDividerColor="#9E1313"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:id="@+id/root_con"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:src="@drawable/jinggao"
        android:id="@+id/jinggao"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="16dp"
        android:layout_height="16dp"/>

    <com.qmuiteam.qmui.widget.QMUIFontFitTextView
        android:textStyle="bold"
        android:textSize="14sp"
        app:qmui_minTextSize="8sp"
        app:qmui_maxTextSize="14sp"
        android:text="血压"
        android:id="@+id/tile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/jinggao"
        android:layout_marginLeft="8dp"
        android:textColor="#FF222222"
        android:layout_width="38dp"
        android:layout_height="wrap_content"/>

    <com.qmuiteam.qmui.widget.QMUIFontFitTextView
        android:textSize="14sp"
        app:qmui_minTextSize="8sp"
        app:qmui_maxTextSize="14sp"
        android:gravity="end"
        android:id="@+id/time_data"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#FF222222"
        android:layout_width="44dp"
        android:layout_height="wrap_content"/>


    <com.qmuiteam.qmui.widget.QMUIFontFitTextView
        android:textSize="14sp"
        app:qmui_minTextSize="8sp"
        app:qmui_maxTextSize="14sp"
        android:id="@+id/data_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tile"
        app:layout_constraintRight_toLeftOf="@+id/time_data"
        android:layout_marginLeft="12dp"
        android:textColor="#FF222222"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFF5F5F5"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FF59B683"
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <View
            android:id="@+id/fanhui"
            android:layout_width="54dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@drawable/fanhui2"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_width="22dp"
            android:layout_height="22dp"/>
        <TextView
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:text="智能网关"
            android:id="@+id/myTitle"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/san2"
            android:layout_width="40dp"
            android:padding="10dp"
            android:id="@+id/shezhi"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"/>

    </RelativeLayout>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ffff"
        android:layout_width="match_parent"
        android:layout_height="520dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:id="@+id/collapsing_topbar_layout"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/scrollView"
        android:background="#F7F7F7"
        android:gravity="center"
        app:layout_collapseMode="parallax"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_weight="3.8"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_alignParentBottom="true"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:textColor="#8A8989"
                android:id="@+id/infiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.skydoves.colorpickerview.ColorPickerView
                android:layout_alignBottom="@+id/infiss"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="28dp"
                android:id="@+id/colorPickerView"
                android:layout_width="200dp"
                android:layout_height="200dp" />



        </RelativeLayout>



            <androidx.appcompat.widget.AppCompatSeekBar
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:id="@+id/seekbar"
                android:layout_marginRight="60dp"
                android:layout_weight="0.7"
                app:layout_constraintTop_toBottomOf="@+id/infiss"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

           <RelativeLayout
               android:orientation="vertical"
               android:layout_marginTop="10dp"
               android:id="@+id/kkk"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:layout_weight="0.9"
               app:layout_constraintTop_toBottomOf="@+id/seekbar"
               android:background="@drawable/zidonghuoqubai6"
               android:layout_width="match_parent"
               android:layout_height="0dp">
                <TextView
                    android:text="开关"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

               <androidx.appcompat.widget.SwitchCompat
                   android:layout_width="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="16dp"
                   android:id="@+id/switcher"
                   android:layout_centerVertical="true"
                   android:layout_height="wrap_content"/>

           </RelativeLayout>


            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="horizontal"
                 android:background="@drawable/zidonghuoqubai6"
                app:layout_constraintTop_toBottomOf="@+id/kkk"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:id="@+id/l1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <com.qmuiteam.qmui.layout.QMUIButton
                        android:layout_width="40dp"
                        android:id="@+id/bt1"
                        android:background="#D8BA4D"
                        android:layout_height="40dp"/>

                    <TextView
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:text="放松"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/l2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <com.qmuiteam.qmui.layout.QMUIButton
                        android:layout_width="40dp"
                        android:id="@+id/bt2"
                        android:background="#C9FBE4"
                        android:layout_height="40dp"/>

                    <TextView
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:text="休息"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/l3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <com.qmuiteam.qmui.layout.QMUIButton
                        android:layout_width="40dp"
                        android:id="@+id/bt3"
                        android:background="#5770ED"
                        android:layout_height="40dp"/>

                    <TextView
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:text="电影"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/l4"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <com.qmuiteam.qmui.layout.QMUIButton
                        android:layout_width="40dp"
                        android:id="@+id/bt4"
                        android:background="#F3DB0B"
                        android:layout_height="40dp"/>

                    <TextView
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:text="起床"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

    </LinearLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


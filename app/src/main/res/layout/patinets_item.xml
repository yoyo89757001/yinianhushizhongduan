<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="6dp"
    android:background="@drawable/yinying1"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/checkbox"
            android:src="@drawable/danxuan0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_width="18dp"
            android:layout_height="18dp"/>



        <TextView
            android:id="@+id/name"
            app:layout_constraintLeft_toRightOf="@+id/checkbox"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="14sp"
            android:layout_marginTop="13dp"
            android:text="马冬梅"
            android:layout_marginLeft="16dp"
            android:textColor="#303030"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="男"
            android:id="@+id/sex"
            app:layout_constraintTop_toTopOf="@+id/name"
            app:layout_constraintBottom_toBottomOf="@+id/name"
            app:layout_constraintLeft_toRightOf="@+id/name"
            android:layout_marginLeft="8dp"
            android:textColor="#B6B6B6"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <View
                android:background="#B6B6B6"
                android:layout_marginLeft="4dp"
                android:id="@+id/v11"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                app:layout_constraintTop_toTopOf="@+id/sex"
                app:layout_constraintBottom_toBottomOf="@+id/sex"
                app:layout_constraintLeft_toRightOf="@+id/sex"
                android:layout_width="1dp"
                android:layout_height="0dp"/>

        <TextView
            android:text="99"
            android:id="@+id/age"
            app:layout_constraintTop_toTopOf="@+id/name"
            app:layout_constraintBottom_toBottomOf="@+id/name"
            app:layout_constraintLeft_toRightOf="@+id/v11"
            android:layout_marginLeft="4dp"
            android:textColor="#B6B6B6"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="#B6B6B6"
            android:id="@+id/v22"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="4dp"
            app:layout_constraintTop_toTopOf="@+id/sex"
            app:layout_constraintBottom_toBottomOf="@+id/sex"
            app:layout_constraintLeft_toRightOf="@+id/age"
            android:layout_width="1dp"
            android:layout_height="0dp"/>

        <TextView
            android:text="F栋 101"
            android:id="@+id/building"
            app:layout_constraintTop_toTopOf="@+id/name"
            app:layout_constraintBottom_toBottomOf="@+id/name"
            app:layout_constraintLeft_toRightOf="@+id/v22"
            android:layout_marginLeft="4dp"
            android:textColor="#B6B6B6"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintLeft_toRightOf="@+id/checkbox"
            android:textSize="13sp"
            android:text="430234568781234"
            android:layout_marginTop="2dp"
            android:id="@+id/number"
            android:layout_marginLeft="14dp"
            android:textColor="#B6B6B6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>
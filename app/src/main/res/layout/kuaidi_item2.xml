<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tvDot"
        app:layout_constraintRight_toRightOf="@+id/tvDot"
        android:layout_width="2dp"
        android:id="@+id/kkk"
        android:layout_height="16dp"
        android:background="#FFE5E5E5" />

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/kkk"
        android:id="@+id/tvDot"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/quan2" />

    <View
        app:layout_constraintLeft_toLeftOf="@+id/tvDot"
        app:layout_constraintRight_toRightOf="@+id/tvDot"
        app:layout_constraintTop_toBottomOf="@+id/tvDot"
        android:layout_width="2dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFE5E5E5" />



    <TextView
        app:layout_constraintTop_toTopOf="@+id/tvDot"
        app:layout_constraintBottom_toBottomOf="@+id/tvDot"
        app:layout_constraintLeft_toRightOf="@+id/tvDot"
        android:id="@+id/title"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textColor="#FF222222"
        android:textSize="16sp" />

    <TextView
        app:layout_constraintLeft_toLeftOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:id="@+id/content_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="6dp"
        android:textColor="#FFC1C1C2"
        android:textSize="14sp" />

    <TextView
        app:layout_constraintLeft_toLeftOf="@+id/content_tv"
        app:layout_constraintTop_toBottomOf="@+id/content_tv"
        android:id="@+id/stime"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="6dp"
        android:text="开始时间:"
        android:textColor="#FFC1C1C2"
        android:textSize="14sp" />

    <TextView
        app:layout_constraintLeft_toLeftOf="@+id/stime"
        app:layout_constraintTop_toBottomOf="@+id/stime"
        android:id="@+id/etime"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="6dp"
        android:text="结束时间:"
        android:textColor="#FFC1C1C2"
        android:textSize="14sp" />

    <TextView
        app:layout_constraintLeft_toLeftOf="@+id/etime"
        app:layout_constraintTop_toBottomOf="@+id/etime"
        android:id="@+id/wtime"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="6dp"
        android:text="完成时间:"
        android:textColor="#FFC1C1C2"
        android:textSize="14sp" />

    <TextView
        app:layout_constraintLeft_toLeftOf="@+id/wtime"
        app:layout_constraintTop_toBottomOf="@+id/wtime"
        android:id="@+id/name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="6dp"
        android:text="完成人:"
        android:textColor="#FFC1C1C2"
        android:textSize="14sp" />




</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:background="@drawable/zidonghuoqu122"
    android:layout_marginBottom="6dp"
    android:layout_height="143dp">

 <TextView
     android:textSize="14sp"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     android:textColor="#FF4C4C4C"
     android:id="@+id/name"
     android:text="马冬梅"
     android:layout_marginLeft="12dp"
     android:layout_marginTop="15dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"/>

    <TextView
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintRight_toLeftOf="@+id/time"
        android:textColor="#FF4C4C4C"
        android:text="F101"
        android:id="@+id/chuanghao"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        android:textColor="#FF4C4C4C"
        android:text="2020-12-12 12:12"
        android:id="@+id/time"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:background="#FFD7D7D7"
        android:id="@+id/vv11"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/vv11"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="100/79"
                android:id="@+id/xueya"
                android:textColor="#FF4C4C4C"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="血压"
                android:textColor="#FFB6B6B6"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:text="100"
                android:id="@+id/maibo"
                android:textColor="#FF4C4C4C"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="脉搏"
                android:textColor="#FFB6B6B6"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
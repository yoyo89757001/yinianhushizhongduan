<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="158dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@color/white"
    android:layout_height="wrap_content">



        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="#FF333333"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:text="巡房"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/type_tv"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@+id/time_tv"
            android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#FF333333"
        android:layout_marginRight="16dp"
        android:layout_marginTop="13dp"
        android:textSize="13sp"
        android:text="2020-12-21 13:22"
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type_tv"
        android:layout_width="match_parent"
        android:textSize="13sp"
        android:textColor="#FFB6B6B6"
        android:id="@+id/chuangwei"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="床位信息:F101_123"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/chuangwei"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textColor="#FFB6B6B6"
        android:textSize="13sp"
        android:id="@+id/name"
        android:text="姓名: 马冬梅  男"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/chuangwei"
        app:layout_constraintLeft_toRightOf="@+id/name"
        android:layout_marginTop="4dp"
        android:textColor="#FFB6B6B6"
        android:textSize="13sp"
        android:id="@+id/hulidengji"
        android:layout_marginLeft="50dp"
        android:text="等级:护理等级Ⅱ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="8dp"
        android:background="#FFD7D7D7"
        android:layout_marginLeft="16dp"
        android:id="@+id/vv1"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:textSize="13sp"
        android:textColor="#FFB6B6B6"
        android:text="【意识状态】"
        android:id="@+id/ys"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vv1"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="13sp"
        android:textColor="#FF333333"
        android:text="正常"
        android:id="@+id/yishi"
        app:layout_constraintTop_toTopOf="@+id/ys"
        app:layout_constraintBottom_toBottomOf="@+id/ys"
        app:layout_constraintLeft_toRightOf="@+id/ys"
        app:layout_constraintTop_toBottomOf="@+id/vv1"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<!--/////////////////////////////////////////////////////////////////-->

    <TextView
        android:textSize="13sp"
        android:textColor="#FF333333"
        android:text="正常"
        android:id="@+id/zhiti"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ys"
        app:layout_constraintBottom_toBottomOf="@+id/ys"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="13sp"
        android:textColor="#FFB6B6B6"
        android:text="【肢体活动】"
        android:id="@+id/zt"
        app:layout_constraintRight_toLeftOf="@+id/zhiti"
        app:layout_constraintTop_toTopOf="@+id/zhiti"
        app:layout_constraintBottom_toBottomOf="@+id/zhiti"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        app:layout_constraintLeft_toRightOf="@+id/yishi"
        app:layout_constraintRight_toLeftOf="@+id/zt"
        app:layout_constraintTop_toTopOf="@+id/ys"
        app:layout_constraintBottom_toBottomOf="@+id/ys"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13sp"
            android:textColor="#FFB6B6B6"
            android:layout_marginRight="10dp"
            android:text="【皮肤粘膜】"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="正常"
            android:textSize="13sp"
            android:textColor="#FF333333"
            android:id="@+id/nianmo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

<!--    ///////////////////////////////////////////////////////-->

    <TextView
        android:textSize="13sp"
        android:textColor="#FFB6B6B6"
        android:text="【视力】"
        android:id="@+id/sl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ys"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="13sp"
        android:textColor="#FF333333"
        android:text="正常"
        android:id="@+id/shili"
        app:layout_constraintTop_toTopOf="@+id/sl"
        app:layout_constraintBottom_toBottomOf="@+id/sl"
        app:layout_constraintLeft_toRightOf="@+id/sl"
        app:layout_constraintTop_toBottomOf="@+id/ys"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!--/////////////////////////////////////////////////////////////////-->

    <TextView
        android:textSize="13sp"
        android:textColor="#FF333333"
        android:text="正常"
        android:id="@+id/paibian"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sl"
        app:layout_constraintBottom_toBottomOf="@+id/sl"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="13sp"
        android:textColor="#FFB6B6B6"
        android:text="【排便】"
        android:id="@+id/pb"
        app:layout_constraintRight_toLeftOf="@+id/paibian"
        app:layout_constraintTop_toTopOf="@+id/sl"
        app:layout_constraintBottom_toBottomOf="@+id/sl"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        app:layout_constraintLeft_toRightOf="@+id/shili"
        app:layout_constraintRight_toLeftOf="@+id/pb"
        app:layout_constraintTop_toTopOf="@+id/shili"
        app:layout_constraintBottom_toBottomOf="@+id/shili"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13sp"
            android:textColor="#FFB6B6B6"
            android:layout_marginRight="10dp"
            android:text="【饮食】"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="正常"
            android:textSize="13sp"
            android:textColor="#FF333333"
            android:id="@+id/yinshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>